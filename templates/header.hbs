<header class="header">
  <nav class="header__nav">

    <a href="arlony-page.html" class="header__image">
      {{{asset headerImage}}}
    </a>

    <button class="header__menu-toggle">
      <span></span>
      <span></span>
      <span></span>
    </button>
  </nav>

  <section class="menu-mobile">

    <button class="menu-mobile__category-toggle">
      {{categoryTitle}}
      <span class="material-icons">chevron_right</span>
    </button>

    <ul class="menu-mobile__category-list">

      {{#each categoryLinks}}
      <li class="menu-mobile__item menu-mobile__item--category">
        {{{module this}}}
        <span class="material-icons">chevron_right</span>
      </li>
      {{/each}}

    </ul>

    <hr>

    <ul class="menu-mobile__nav-links">
      {{#each navLinks}}
      <li class="menu-mobile__item menu-mobile__item--nav">
        {{{module this}}}
        <span class="material-icons">chevron_right</span>
      </li>
      {{/each}}
    </ul>
  </section>
</header>
